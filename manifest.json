{
  "manifest_version": 3,
  "name": "LinkedIn Scraper Assistant",
  "version": "1.0.0",
  "description": "Extract structured data from LinkedIn profiles and job posts with API integration",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://kaoz.dk/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Scraper",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/jobs/*"],
      "js": ["scrapeJobs.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.linkedin.com/in/*"],
      "js": ["scrapeProfile.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js"],
      "matches": ["https://*.linkedin.com/*"]
    }
  ]
}
